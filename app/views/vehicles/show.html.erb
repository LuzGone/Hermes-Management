<%= render partial: "/layouts/navbar" %>

<div class="main-content flex-grow-1 p-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Veículo <%= @vehicle.placa%></h2>
  </div>
  <div class="container-fluid">
    <div class="container">
      <h4>Placa</h4>
      <%= @vehicle.placa%>
    </div>
    <div class="container">
      <h4>Modelo</h4>
      <%= @vehicle.modelo%>
    </div>
    <div class="container">
      <h4>Situação</h4>
      <%= @vehicle.situacao%>
    </div>
  </div>
  <div>
    <h3>Histórico de Transportes do Veículo</h3>
    <%= render @transportings%>
  </div>

  <div>
    <h3>Histórico de Motoristas do Veículo</h3>
    <%= render @drivings%>
  </div>
</div>
