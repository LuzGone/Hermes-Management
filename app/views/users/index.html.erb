<%= render partial: "/layouts/navbar"%>
<div style="margin-left:1rem">
<h2>Usuários</h2>
<%= link_to "Adicionar Usuário", new_user_path %>
<div class="container">
  <table class="table table-striped shadow-sm p-3 mb-5 bg-body-tertiary rounded border">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nome</th>
        <th scope="col">Matricula</th>
        <th scope="col">Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row">#</th>
          <td><%=user.nome%></th>
          <td><%=user.matricula%></th>
          <td><%= link_to "Editar", edit_user_path(user) %> - <%= button_to "Deletar", user, method: :delete %></th>
        </tr>
      <%end%>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
</div>