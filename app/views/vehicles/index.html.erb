<%= render partial: "/layouts/navbar" %>

<div class="main-content flex-grow-1 p-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Veículos</h2>
    <%= link_to "Adicionar Veículo", new_vehicle_path, class: "btn btn-adicionar-pedido" %>
  </div>

  <div class="container-fluid">
    <div class="table-responsive shadow-sm p-4 mb-5 bg-white rounded">
      <table class="table table-hover table-borderless align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Placa</th>
            <th scope="col">Modelo</th>
            <th scope="col">Situação</th>
            <th scope="col" class="text-center">Opções</th>
          </tr>
        </thead>
        <tbody>
          <% @vehicles.each_with_index do |vehicle, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= vehicle.placa %></td>
              <td><%= vehicle.modelo %></td>
              <td><%=vehicle.situacao%></th>
              <td class="text-center">
                <div class="btn-group">
                  <%= link_to edit_vehicle_path(vehicle), class: "btn btn-sm btn-outline-info", title: "Editar", data:{turbo_frame: "modal"} do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to vehicle, method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: "Você tem certeza?" }, title: "Deletar" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                  <%= link_to "Atribuir Motorista", url_for(controller: :drivings, action: :new, id: vehicle.id), data:{turbo_frame: "modal"}%>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginação -->
    <div class="d-flex justify-content-center pag">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
