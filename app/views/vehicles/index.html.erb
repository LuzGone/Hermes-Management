<%= render partial: "/layouts/navbar"%>
<div style="margin-left:1rem">
<h2>Veículos</h2>
<%= link_to "Adicionar Veículo", new_vehicle_path %>
<div class="container">
  <table class="table table-striped shadow-sm p-3 mb-5 bg-body-tertiary rounded border">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Placa</th>
        <th scope="col">Modelo</th>
        <th scope="col">Situação</th>
        <th scope="col">Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <th scope="row">#</th>
          <td><%=vehicle.placa%></th>
          <td><%=vehicle.modelo%></th>
          <td><%=vehicle.situacao%></th>
          <td><%= link_to "Editar", edit_vehicle_path(vehicle), data:{turbo_frame: "modal"} %> - <%= button_to "Deletar", vehicle, method: :delete %> - <%= link_to "Atribuir Motorista", url_for(controller: :drivings, action: :new, id: vehicle.id), data:{turbo_frame: "modal"}%></th>
        </tr>
      <%end%>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
</div>